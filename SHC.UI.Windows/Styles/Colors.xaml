<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SHC.UI.Windows.Styles">
    
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <Color x:Key="PrimaryColor">#1f7a8c</Color>
            <Color x:Key="BorderColor">#022b3a</Color>
            <Color x:Key="ForegroundColor">White</Color>
        </ResourceDictionary>

        <ResourceDictionary x:Key="Dark">
            <Color x:Key="PrimaryColor">#1f7a8c</Color>
            <Color x:Key="BorderColor">red</Color>
            <Color x:Key="ForegroundColor">#eeeeee</Color>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{ThemeResource PrimaryColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{ThemeResource BorderColor}"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="{ThemeResource ForegroundColor}"/>
</ResourceDictionary>
